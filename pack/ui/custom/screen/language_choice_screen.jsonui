    uv_size = [32, 2],
    size = ["100%", 2],
    anchor_from = "top_left",
    anchor_to = "top_left",
    offset = [0, 30]
  },

  footer_separator@kmjava_language_choice.header_separator = {
    texture = "CUSTOM_TEXTURES_PATH/minecraft/textures/gui/footer_separator.png",
    offset = [0, "100% - 32px"]
