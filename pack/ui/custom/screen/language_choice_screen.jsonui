    uv_size = [6, 32]
  },

  scroller_background = {
    type = "image",
    nineslice_size = 1.0,
    texture = "CUSTOM_TEXTURES_PATH/minecraft/textures/gui/sprites/widget/scroller_background.png",
    uv = [0, 0],
    uv_size = [6, 32]
  },

  language_label = {
    type = "label",
    size = [ "100%", "100%" ],
