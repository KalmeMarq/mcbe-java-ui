          size = ["6px", "100%"],
          anchor_from = "top_left",
          controls = [
            { scroller_box@kmjava_language_choice.scroller_box = {} }
          ]
        }
      }
    ]
  },
#endif

  scroll_area = {
    type = "panel",
    size = ["100%", "100% - 64px"],
    anchor_from = "top_middle",
    anchor_to = "top_middle",
